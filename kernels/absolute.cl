////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Get the absolute value of a complex image
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Takes an input image, calculates the absolute value to be returned in the same image
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// input_a - image to absolute
/// width - width of the inputs
/// height - height of the outputs
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
__kernel void clAbs(__global float2* input,
					int width,
					int height)
{
	//Get the work items ID
	int xid = get_global_id(0);
	int yid = get_global_id(1);
	if(xid < width && yid < height)
	{
		int Index = xid + yid*width;
		float real = input[Index].x;
		float imag = input[Index].y;
		input[Index].x = sqrt( real*real + imag*imag );
		input[Index].y = 0;
	}
}
